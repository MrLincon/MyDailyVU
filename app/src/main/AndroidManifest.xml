<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.whitespace.mydailyvu">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".Activity.OnboardingActivity"></activity>
        <activity android:name=".Activity.TestActivity" />
        <activity
            android:name=".Authentication.PasswordRecoveryActivity"
            android:parentActivityName=".Authentication.LoginActivity" />
        <activity android:name=".Activity.SplashScreenActivity" />
        <activity
            android:name=".Activity.FeedbackActivity"
            android:parentActivityName=".Activity.RoutineActivity" />
        <activity android:name=".Activity.AboutActivity" />
        <activity
            android:name=".Activity.NotificationActivity"
            android:parentActivityName=".Activity.RoutineActivity" />
        <activity android:name=".Authentication.ConfirmActivity" />
        <activity android:name=".Authentication.SignupActivity" />
        <activity android:name=".Authentication.LoginActivity" />
        <activity android:name=".Activity.RoutineActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Routine_Settings.RoutineSettingsActivity"
            android:parentActivityName=".Activity.RoutineActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>